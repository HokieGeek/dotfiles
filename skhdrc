# focus monitor
lctrl + cmd - 1  : chunkc tiling::monitor -f 1
lctrl + cmd - 2  : chunkc tiling::monitor -f 2
lctrl + cmd - 3  : chunkc tiling::monitor -f 3

# increase region size
meh - h : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge west
# shift + alt - s : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
# shift + alt - w : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
meh - i : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge east

# decrease region size
hyper - h : chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge west
# shift + cmd - s : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
# shift + cmd - w : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
hyper - i : chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge east

meh - z : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge west; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge east
# meh - x : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge south; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge north
# meh - c : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge north; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge south
meh - x : chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge east; chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge west

# rotate tree
lctrl + cmd + lalt - space : chunkc tiling::desktop --rotate 90

