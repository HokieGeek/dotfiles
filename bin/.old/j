#/bin/sh

usage() {
	echo "USAGE: `basename $0` [-c CLASSPATH] JAVAFILE [CMD LINE ARGS]"
	exit
}
[ $# -le 0 ] && usage
if [ "$1" = "-c" ]; then
	shift
	CLASSPATH=${CLASSPATH}:$1
	shift
fi
[ $# -le 0 ] && usage

CLASSPATH=${CLASSPATH}:.:`pwd`
CLASSNAME=`echo $1 | cut -d. -f1`
shift

javac ${CLASSNAME}.java
java -cp ${CLASSPATH} ${CLASSNAME} $*
rm -rf ${CLASSNAME}.class
