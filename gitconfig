[alias]
    st = status -sb
    last = log -p -1 HEAD
    stash-unapply = !git stash show -p | git apply -R
    sf = submodule foreach
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(cyan)<%an>%Creset'
    diff = diff --patience
    df = diff --ext-diff --patience
    dt = difftool -y
    chg = commit --author='HokieGeek'
    branch-sort = !$HOME/.bin/git-sorted-branches
    sublog = !$HOME/.bin/git-submodules-log
[core]
    eol = lf
	excludesfile = ~/.gitignore
